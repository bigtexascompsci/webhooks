{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "dist",
    "rootDir": "src",
    "paths": { "~/*": ["./src/*"] },
    "target": "ESNext"
  }, 
  "include": [
    "./src/**/*"
  ]
}
